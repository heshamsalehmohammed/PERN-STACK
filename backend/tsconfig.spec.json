{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "esModuleInterop":true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types",
        "./src/types"
      ],
      "types": [
        "node",
        "jest"
      ]
    },
    "include": ["./src", "./**/*.spec.ts", "./**/*.test.ts"],
    "exclude": ["node_modules", "build"]
  }
  